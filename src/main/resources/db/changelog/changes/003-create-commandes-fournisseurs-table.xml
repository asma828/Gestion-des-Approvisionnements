<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-commandes-fournisseurs-table" author="tricol">
        <createTable tableName="commandes_fournisseurs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_commande" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="statut" type="VARCHAR(50)" defaultValue="EN_ATTENTE">
                <constraints nullable="false"/>
            </column>
            <column name="montant_total" type="DECIMAL(10,2)"/>
            <column name="fournisseur_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="commandes_fournisseurs"
                baseColumnNames="fournisseur_id"
                constraintName="fk_commande_fournisseur"
                referencedTableName="fournisseurs"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>