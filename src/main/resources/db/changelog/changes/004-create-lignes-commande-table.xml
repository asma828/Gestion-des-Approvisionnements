<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-lignes-commande-table" author="tricol">
        <createTable tableName="lignes_commande">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="commande_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantite" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="prix_unitaire" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="sous_total" type="DECIMAL(10,2)"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="lignes_commande"
                baseColumnNames="commande_id"
                constraintName="fk_ligne_commande"
                referencedTableName="commandes_fournisseurs"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="lignes_commande"
                baseColumnNames="produit_id"
                constraintName="fk_ligne_produit"
                referencedTableName="produits"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>