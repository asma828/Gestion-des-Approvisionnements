<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-create-commande-produit-table" author="tricol">
        <createTable tableName="commande_produit">
            <column name="commande_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="commande_produit"
                columnNames="commande_id, produit_id"
                constraintName="pk_commande_produit"/>

        <addForeignKeyConstraint
                baseTableName="commande_produit"
                baseColumnNames="commande_id"
                constraintName="fk_cp_commande"
                referencedTableName="commandes_fournisseurs"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="commande_produit"
                baseColumnNames="produit_id"
                constraintName="fk_cp_produit"
                referencedTableName="produits"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>